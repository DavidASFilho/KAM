@model KAM.Models.Equipamento

@{
    ViewData["Title"] = "Início";
}

<h1>
    Gerenciamento de Equipamentos
</h1>
<h5>
    Cadastre novos equipamentos ou atualize os produtos já cadastradados
</h5>
<hr />
<div style="font-family: Franklin Gothic;">
    <div class="form-group form-row justify-content-between">
        <a class="btn btn-primary" asp-action="Create">Novo Cadastro</a>
        <a class="btn btn-info " asp-action="Search">Pesquisa Avançada</a>
    </div>
    <div class="alert alert-primary" role="alert">
        Ultimo equipamento cadastrado!
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Os)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Empresa)
                </th>
                <th class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nf)
                </th>
                <th class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Equipamento1)
                </th>
                <th class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Sn)
                </th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Os)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Nf)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Equipamento1)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Sn)
                    </td>
                </tr>
        </tbody>
    </table>
</div>

